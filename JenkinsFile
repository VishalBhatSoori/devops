pipeline {
    agent any  // Defines where the pipeline will run (e.g., any available agent)

    environment {
        // Environment variables can be defined here
        MY_VAR = 'SomeValue'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from your repository
                git 'https://github.com/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                // Compile or build your application
                sh 'echo "Building application..."'
                sh './build.sh'  // Replace with your build command
            }
        }

        stage('Test') {
            steps {
                // Run tests
                sh 'echo "Running tests..."'
                sh './run-tests.sh'  // Replace with your test command
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your application
                sh 'echo "Deploying application..."'
                sh './deploy.sh'  // Replace with your deploy command
            }
        }
    }

    post {
        always {
            // Clean up or notify about build status
            echo 'Cleaning up...'
        }
        success {
            // Send notifications or other actions for success
            echo 'Pipeline succeeded!'
        }
        failure {
            // Send notifications or other actions for failure
            echo 'Pipeline failed!'
        }
    }
}
